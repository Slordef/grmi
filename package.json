    "action",
    "runner",
    "manager",
    "interface"
  ],
  "author": "Slordef",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Slordef/grmi/issues"
  },
  "homepage": "https://github.com/Slordef/grmi#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.22.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
