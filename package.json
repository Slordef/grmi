{
  "name": "grmi",
  "version": "0.1.0",
  "description": "Github Runners Manager Instance",
  "main": "index.js",
  "scripts": {
    "start": "node ./build/main/index.js",
    "test": "jest --config=jest.config.js",
    "test:dev": "jest --watch --config=jest.config.js",
    "cy:dev": "concurrently --kill-others \"pnpm run dev\" \"cypress open\"",
    "dev": "nodemon --files -L --exec ts-node src/main/index.ts",
    "prepare": "husky install",
    "lint": "eslint --ext .ts",
    "build": "rimraf ./build && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Slordef/grmi.git"
  },
  "keywords": [
    "grmi",
    "github",
    "action",
    "runner",
    "manager",
    "interface"
  ],
  "author": "Slordef",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Slordef/grmi/issues"
  },
  "homepage": "https://github.com/Slordef/grmi#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.15.0",
    "commitlint": "^19.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "verify-github-webhook-secret": "^2.0.11",
    "zod": "^3.23.8"
  }
